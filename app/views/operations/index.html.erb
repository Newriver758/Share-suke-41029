<h1>運行情報一覧</h1>

<!-- 全ユーザーの一覧を表示 -->
<div class="user-list">
  <h2>ユーザー別運行情報</h2>
  <ul>
    <% User.all.each do |user| %>
      <li>
        <%= link_to user.name, user_operations_path(user), class: "btn btn-outline-primary" %>
      </li>
    <% end %>
  </ul>
</div>

<!-- 運行情報テーブル -->
<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>運行情報</th>
      <th>時間帯</th>
      <th>業務内容</th>
      <th>メモ</th>
    </tr>
  </thead>
  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= operation.user.name %></td>
        <td><%= operation.start_date %></td>
        <td><%= operation.end_date %></td>
        <td><%= operation.operation_info %></td>
        <td><%= operation.day_or_night.name %></td>
        <td><%= operation.work_content.name %></td>
        <td><%= operation.memo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @operation.present? %>
  <%= link_to 'カレンダーに戻る', calendars_path(start_date: @operation.start_date.beginning_of_week), class: 'btn btn-secondary' %>
<% end %>

