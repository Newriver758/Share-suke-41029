<h1>運行情報編集</h1>

<%= form_with(model: @operation, local: true) do |form| %>

<%= render 'shared/error_messages', model: form.object %>

  <div class="form-group">
    <%= form.label :operation_info, "運行情報" %>
    <%= form.text_field :operation_info, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :day_or_night_id, "昼/夜" %>
    <%= form.select :day_or_night_id, DayOrNight.all.collect { |d| [d.name, d.id] }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :work_content_id, "業務内容" %>
    <%= form.select :work_content_id, WorkContent.all.collect { |w| [w.name, w.id] }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, "開始日" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date, "終了日" %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <%= form.submit "更新", class: "btn btn-success" %>
<% end %>

<%= link_to "キャンセル", operation_path(@operation), class: "btn btn-secondary" %>

<div class="footer-text">
  <p>Copyright(C) Share-suke ALL RIGHTS RESERVED.</p>
</div>
